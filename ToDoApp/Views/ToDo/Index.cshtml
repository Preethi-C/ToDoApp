@model List<ToDo>

    <div class="container">
       <div class="card">
         <div class="card-body bg-primary shadow">
            <h2 class=" text-white text-center">TO DO List</h2>
         </div>
       </div>
       <hr />
       <div class="row">
           <div class="col-12">
               <form method="post">
                   <input type ="text" class="form-control mb-2" placeholder="Add a task"/>
                <button type="submit" class="btn btn-success mb-4">Add Task</button>
               </form>
           </div>
    </div>
           <div class="row border border-1">
            <div class="col-6">
                <p class="m-3 text-primary">Task</p>
            </div>
        <div class="col-6 d-flex justify-content-end">
                 <input type="checkbox" class="form-check-input m-2 p-3" />
            <button class="btn btn-danger mt-2 mb-4"><i class="bi bi-trash"></i></button>
            </div>
           </div>
</div>
