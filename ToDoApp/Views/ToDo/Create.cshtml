@model ToDo

<div class="row">
    <div class="col-12">
        <form method="post">
            <div class="form-group">
                <label asp-for="Title" class="form-label"></label>
                <input asp-for="Title" class="form-control mb-2" />
                <span asp-validation-for="Title" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="form-label"></label>
                <input asp-for="Date" class="form-control mb-2" />
                <span asp-validation-for="Date" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsDone" class="form-label"></label>
                <input asp-for="IsDone" class="form-check-input mb-2" />
            </div>
            <button type="submit" class="btn btn-success mb-4">Create Task</button>
            <a asp-controller="ToDo" asp-action="Index" class="btn btn-secondary mb-4">Back</a>
        </form>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptspartial" />
    }
}