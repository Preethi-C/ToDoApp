@model ToDo

<div class="row">
    <div class="col-12">
        <form method="post">
            <div class="form-group">
                <label asp-for="Title" class="form-label"></label>
                <input asp-for="Title" class="form-control mb-2" />
            </div>
            <div class="form-group">
                <label asp-for="Date" class="form-label"></label>
                <input asp-for="Date" class="form-control mb-2" />
            </div>
            <div class="form-group">
                <input asp-for="IsDone" class="form-check-input mb-2" />
                <label class="form-check-label" asp-for="IsDone">@Html.DisplayNameFor(model => model.IsDone)</label>
            </div>
            <button type="submit" class="btn btn-success mb-4">Update Task</button>
        </form>
    </div>
</div>
